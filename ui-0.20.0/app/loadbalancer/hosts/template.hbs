<section class="grid-header">
  <div class="row">
    <div class="col-sm-6">
      <h3>Hosts ({{hosts.length}})</h3>
    </div>
    <div class="col-sm-6 text-right">
      <button {{action "newHost"}} class="btn btn-sm btn-primary" {{bind-attr disabled="addDisabled:disabled"}}>Add Hosts</button>
    </div>
  </div>
</section>
<section>
  <table class="grid fixed" style="margin-bottom: 0;">
    <thead>
      <tr>
        <th width="120">State</th>
        <th>Name</th>
        <th>IP Address</th>
        <th class="actions" width="50">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each lbhost in hosts itemController="loadbalancerhost"}}
        <tr>
          <td>
            <span {{bind-attr class=":badge :state lbhost.stateBackground"}}>
              {{lbhost.displayState}}
            </span>
          </td>
          <td>
            {{#link-to "host" lbhost.id}}{{lbhost.displayName}}{{/link-to}}
          </td>
          <td>
            {{lbhost.displayIp}}
          </td>
          <td class="actions">
            {{resource-actions-menu model=lbhost choices=lbhost.availableActions}}
          </td>
        </tr>
      {{else}}
        <tr><td colspan="4" class="text-center text-muted">This balancer does not have any hosts yet.</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>


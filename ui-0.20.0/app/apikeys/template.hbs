<section>
  <div class="row">
    <div class="col-md-6">
      <label>Endpoint</label>
      <div class="well">
        <a {{bind-attr href=endpointWithAuth}} target="_blank">{{endpoint}}</a>
      </div>
    </div>

    <div class="col-md-6">
      <label>Documentation</label>
      <div class="well">
        <span class="text-muted">Coming Soon&trade;</span>
      </div>
    </div>
  </div>
</section>

<section class="grid-header">
  <div class="row">
    <div class="col-md-9 col-sm-6">
      <h3>API Keys for &quot;{{#with controllers.authenticated.project as p controller="project"}}{{p.displayName}}{{/with}}&quot; ({{length}})</h3>
    </div>
    <div class="col-md-3 col-sm-6 text-right">
      <button {{action "newApikey"}} class="btn btn-primary"><i class="ss-plus"></i> Create an API key</button>
    </div>
  </div>
</section>

<section>
  <table class="grid fixed" style="margin-bottom: 0">
    <thead>
      <tr>
        <th width="120">State</th>
        <th>Name</th>
        <th>Username</th>
        <th>Created</th>
        <th width="50">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each key in this}}
        <tr>
          <td>
            <span {{bind-attr class=":badge :state key.stateBackground"}}>
              {{key.displayState}}
            </span>
          </td>
          <td>
            {{#if key.name}}{{key.displayName}}{{else}}<span class="text-muted text-italic">No name</span>{{/if}}
          </td>
          <td>
            {{#if key.publicValue}}{{key.publicValue}}{{else}}<span class="text-muted text-italic">No public value</span>{{/if}}
          </td>
          <td>
            <div class="text-muted">{{date-calendar key.created}}</div>
          </td>
          <td align="right">
            {{resource-actions-menu model=key choices=key.availableActions}}
          </td>
        </tr>
      {{else}}
        <tr><td colspan="4" class="text-center text-muted">You don't have any API keys yet.</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>
